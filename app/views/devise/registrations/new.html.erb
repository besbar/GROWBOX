<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="form shadow-sm px-4 py-3">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>
        <h1 class="fs-3 text-center pb-2 fw-bold"><%= "Créer un compte" %></h1>
            <p class="fs-5 text-center pb-2 border-bottom opacity-50 mb-2"><%= "Bienvenue chez GROWBOX" %></p>
        <div class="form-inputs">
          <%= f.input :email,
                      label: "Adresse email",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <div class="row">
            <div class="col-12 col-lg-6">
            <%= f.input :first_name,
                      label: "Prénom",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first name" }%>
            </div>
            <div class="col-12 col-lg-6">
          <%= f.input :last_name,
                      label: "Nom",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last name" }%>
            </div>
          </div>

          <%= f.input :company,
                      label: "Entreprise",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "company" }%>
          <%= f.input :password,
                      label: "Mot de passe",
                      required: true,
                      hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirmez votre mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Créer mon compte", class:"btn btn-primary" %>
          </div>
        <% end %>

        </div>
            <%- if controller_name != 'sessions' %>
            <%= link_to "Se connecter", new_session_path(resource_name), class:"btn btn-outline-primary mt-3 ms-4"%><br />
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
