<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="form shadow-sm px-4 py-3">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <h1 class="fs-3 text-center pb-2 fw-bold"><%= "Mot de passe oublié ?" %></h1>
        <div class="form-inputs">
          <%= f.input :email,
                      label:"Adresse email",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Recevoir les instructions par mail", class:"btn btn-primary" %>
        </div>
      <% end %>

    </div>
    <div class="d-flex mt-3">
      <%- if controller_name != 'sessions' %>
      <%= link_to "Se connecter", new_session_path(resource_name), class:"btn btn-outline-primary"%><br />
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Créer un compte", new_registration_path(resource_name), class:"btn btn-outline-primary ms-3" %><br />
      <% end %>
    </div>
  </div>
</div>
