<div class="navbar navbar-expand-sm navbar-light navbar-lewagon bg-primary position-sticky top-0" style="z-index:1">
  <div class="container-fluid">
    <% if user_signed_in? %>
      <%= link_to dashboard_path, class: "navbar-brand" do %>
      <p class="mb-0 text-white font-weight-bold">MYGROWBOX</p>
      <% end %>
    <% else %>
      <%= link_to "/", class: "navbar-brand" do %>
        <p class="mb-0 text-white font-weight-bold">MYGROWBOX</p>
      <% end %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <% user_initials = current_user.first_name.chars.first+current_user.last_name.chars.first %>
            <button class="avatar btn btn-info text-light px-0" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= user_initials.upcase %></button>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mon tableau de bord", dashboard_path, class: "dropdown-item text-black" %>
              <%= link_to "Se déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <% unless current_page?(controller: "devise/sessions", action: "new") %>
            <li class="nav-item">
              <%= link_to "Accéder à mon tableau de bord", new_user_session_path, class: "btn btn-info nav-link text-light py-1 mx-2 px-3" %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
