<div class="main-card shadow-sm">
  <div class="main-card-photo" style="background-image: url(<%= image_path("plants/#{plant.family.parameterize}.png") %>)"></div>
  <div class="main-card-info p-3">
    <div class ="d-flex flex-column">
      <h3 class="main-card-title"><%= plant.family %></h3>
      <p class="text-primary fw-semibold"><%= plant.species %></p>
      <div class="d-flex align-items-center opacity-50">
        <i class="fa-solid fa-location-dot me-2"></i>
        <span class="main-card-location align-self-center"><%= plant.site.name %></span>
      </div>
    </div>
  </div>
</div>
