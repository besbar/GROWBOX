<div class="main-card main-card-height border shadow-sm">
  <div class="main-card-info">
    <h3 class="main-card-title card-header"><%= alert_setting.sensor.name %></h3>
    <div class="d-flex justify-content-center text-center opacity-50">
      <div class="d-flex flex-column align-items-center">
        <div class="py-2">
          <% if alert_setting.temperature_min %>
            <i class="fa-solid fa-temperature-half"></i>
          <% end %>
          <%= "T° min: #{alert_setting.temperature_min.to_i}°C - " if alert_setting.temperature_min %>
          <%= "T° max: #{alert_setting.temperature_max.to_i}°C" if alert_setting.temperature_max %>
        </div>
        <div>
          <% if alert_setting.air_rh_min %>
            <i class="fa-solid fa-droplet "></i>
          <% end %>
          <%= "Humidité de l'air min: #{alert_setting.air_rh_min} % - " if alert_setting.air_rh_min %>
          <%= "max: #{alert_setting.air_rh_max} %" if alert_setting.air_rh_max %>
        </div>
      </div>
      <div class="mt-3">
        <div class="d-flex">
          <div class="pe-2">
            <% unless alert_setting.tank_level_min.nil? || alert_setting.tank_level_min == 0 %>
              <i class="fa-solid fa-glass-water"></i>
            <% end %>
          </div>
          <%= "Etat du réservoir: #{alert_setting.tank_level_min} L" unless alert_setting.tank_level_min.nil? || alert_setting.tank_level_min == 0 %>
        </div>
        <div class="d-flex align-items-center">
          <div class="pe-2">
            <% if alert_setting.ground_rh_min %>
              <i class="fa-solid fa-droplet"></i>
            <% end %>
          </div>
          <%= "Humidité du sol min: #{alert_setting.ground_rh_min} % - " if alert_setting.ground_rh_min %>
          <%= "max: #{alert_setting.ground_rh_max} %" if alert_setting.ground_rh_max %>
        </div>
        <div class="d-flex align-items-center">
          <div class="pe-2">
            <% if alert_setting.luminosity_min %>
              <i class="fa-regular fa-lightbulb"></i>
            <% end %>
          </div>
          <%= "Luminosité min: #{alert_setting.luminosity_min} - " if alert_setting.luminosity_min %>
          <%= "max: #{alert_setting.luminosity_max} lumens" if alert_setting.luminosity_max %>
        </div>
      </div>
    </div>
  </div>
</div>
