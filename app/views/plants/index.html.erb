<h1>Plants</h1>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="d-flex align-items-center justify-content-between">
        <h1 class="text-primary fs-1 fw-bold text-center mb-4"><%= @plants.length %> plantes sous gestion</h1>
        <%= link_to new_plant_path do%><button class="btn btn-outline-primary">Ajouter une plante</button><% end %>
      </div>
      <div class="grid">
        <% @plants.each do |plant| %>
          <%= link_to plant_path(plant), class: 'text-decoration-none' do %>
            <%= render 'partial/card', plant: plant %>
          <% end %>
        <% end %>
      </div>
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
<br>
