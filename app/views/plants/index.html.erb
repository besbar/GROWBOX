<h1>Plants</h1>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12">
      <div>
        <h1 class="text-primary fs-1 fw-bold text-center mb-4"><%= @plants.length %> plantes sous gestion</h1>
      </div>
      <div class="grid">
        <% @plants.each do |plant| %>
          <%= link_to plant_path(plant), class: 'text-decoration-none' do %>
            <%= render 'partial/card', plant: plant %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
<%= link_to "Ajouter une plante", new_plant_path%>
